#!/bin/sh
# SIGNAL 4

case $BLOCK_BUTTON in 
    # 1) setsid -f "$TERMINAL" -t "rss" -e "newsboat" >/dev/null 2>&1 && sleep 0.2;;
    1) "$TERMINAL" -e "newsboat" >/dev/null 2>&1;;
    2) setsid -f "$TERMINAL" -e "$EDITOR" "$0" >/dev/null 2>&1 &;;
    3) setsid -f rssup -d >/dev/null 2>&1 &;;
esac

color=#458588
icon=
[ -f /tmp/newsupdate ] && sb-show $color $icon '' && exit
unread=$(newsboat -x print-unread | cut -d' ' -f 1)
[ $unread -eq 0 ]   && unread=''
[ $unread -ge 100 ] && unread="99+"
sb-show $color $icon $unread
