#!/bin/sh
# SIGNAL 10

case $BLOCK_BUTTON in
    1) pkill -RTMIN+10 dwmblocks;;
    3) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
dayfile=$HOME/.cache/dwm-date
day=$(< $dayfile)
nday=$(date '+%d'|tee $dayfile)
if [ $day -ne $nday ]; then 
    # notify-send "HELLO WORLD!" "ONE DAY PASSED"
    pkill -RTMIN+12 dwmblocks # refresh sb-date
# else
    # notify-send "THE WORLD!" "TIME PAUSED"
fi

color=#689d6a
sb-show $color 'ï€— ' $(date '+%H:%M')
