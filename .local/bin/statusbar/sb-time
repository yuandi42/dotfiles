#!/bin/sh
# SIGNAL 10

case $BLOCK_BUTTON in
    1) pkill -RTMIN+10 dwmblocks;;
    3) setsid -f "$TERMINAL" -e "$EDITOR" "$0" >/dev/null 2>&1 &;;
esac
dayfile=$HOME/.cache/dwm-date
day=$(< $dayfile)
nday=$(date '+%d')
if [ $day -ne $nday ]; then 
    pkill -RTMIN+12 dwmblocks # refresh sb-date
    echo "$nday" > $dayfile
fi

color=#689d6a
sb-show $color 'ï€— ' $(date '+%H:%M')
