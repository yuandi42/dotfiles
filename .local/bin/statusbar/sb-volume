#!/bin/sh
# Prints the current volume.
# SIGNAL 3

case $BLOCK_BUTTON in
    1) amixer -q set Master toggle;;
    3) setsid -f "$TERMINAL" -e "$EDITOR" "$0" >/dev/null 2>&1 &;;
    4) amixer -q set Master 5%+;;
    5) amixer -q set Master 5%-;;
esac

color=#d3869b
volinfo=$(amixer get Master | tail -n 1 | tr -d '[]%'| cut -d ' ' -f 6,8)
vol=$(echo $volinfo | cut -d ' ' -f 1)
case $volinfo in
    *off) 
        sb-show $color ' ' 'OFF' && exit;;
    *on) 
        if [ "$vol" -gt "50" ]; then
            icon=''
        elif [ "$vol" -gt "15" ]; then
            icon=''
        elif [ "$vol" -gt "0" ]; then
            icon=''
        else
            sb-show $color ' ' 'OFF' && exit
        fi;;
esac
sb-show $color $icon' '  $vol%% && exit
