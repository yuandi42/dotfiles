#!/usr/bin/sh
# SIGNAL 5

case $BLOCK_BUTTON in
    1) setsid -f "$TERMINAL" -e "sb-popup" >/dev/null 2>&1 &;;
    3) setsid -f "$TERMINAL" -e "$EDITOR" "$0" >/dev/null 2>&1 &;;
esac
color=#b8bb26
update=$(paru -Qu | wc -l)
[ $update -eq 0 ] && sb-show $color '' '✓' && exit
sb-show $color '' "$update"
