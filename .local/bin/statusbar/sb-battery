#!/usr/bin/sh
# Loop through all attached batteries and format the info
# SIGNAL 11

case $BLOCK_BUTTON in
    1) notify-send "Battery condition" "blabla"
       pkill -RTMIN+11 dwmblocks;;
    3) setsid -f "$TERMINAL" -e "$EDITOR" "$0";;
esac

for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "
	# Sets up the status and capacity
	case "$(cat "$battery/status" 2>&1)" in
		"Full") status="" ;;
		"Discharging") status="" ;;
		"Charging") status="" ;;
		"Not charging") status="" ;;
		"Unknown") status="" ;;
		*) printf "error" && exit 1 ;;
	esac
	capacity="$(cat "$battery/capacity" 2>&1)"
    color=#b8bb26
	# Will make a warn variable if discharging and low
	[ "$status" = "" ] && [ "$capacity" -le 25 ] && $status="" && color=#fb4934 && 
    \ notify-send -u critical "LOW BATTERY!" "The capacity of battery is less than 25% now!"
	# Prints the info
	sb-show $color $status $capacity%%
done
