#!/bin/sh
# map/unmap window, unfortunately doesn't work on stupid wemeetapp. So
# tencent, fxxk you!

if [ -f /tmp/unmapwin ]; then 
    wid=$(cat /tmp/unmapwin)
    notify-send "map hidden window"
    xdotool windowmap $wid && rm /tmp/unmapwin
else
    wid=$(xdotool getactivewindow)
    notify-send "unmap current window"
    xdotool windowunmap $wid && echo "$wid" > /tmp/unmapwin
fi
