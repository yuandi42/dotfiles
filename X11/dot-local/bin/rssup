#!/bin/sh

# Set as a cron job to check for new RSS entries for newsboat.
# Options:
# q   no notify-send

# Get the options
while getopts ":q" opt; do
    case ${opt} in
        q) quiet=1;;
        ?) echo "Error: Invalid opt" && exit 1;;
    esac
done

[ -z "$quiet" ] && /usr/bin/notify-send "ðŸ“° Updating RSS feeds..."

pgrep newsboat && /usr/bin/notify-send "ðŸ“° Running newsboat detected." && exit 0

echo ðŸ”ƒ > /tmp/newsupdate

pkill -RTMIN+4 dwmblocks

if [ -z "$quiet" ]; then
    if /usr/bin/newsboat -x reload 2>&1; then
		/usr/bin/notify-send "ðŸ“° RSS feed update complete."
	else
		/usr/bin/notify-send "ðŸ“° RSS feed update error."
	fi
else
    /usr/bin/newsboat -x reload 2>&1 || /usr/bin/notify-send "ðŸ“° RSS feed update error."
fi

rm -f /tmp/newsupdate
pkill -RTMIN+4 dwmblocks
