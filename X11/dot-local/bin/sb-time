#!/bin/sh
# SIGNAL 10

case $BLOCK_BUTTON in
    1) notify-send "DATE & TIME:" "$(date)";;
    3) setsid -f "$TERMINAL" -e "$EDITOR" "$0" >/dev/null 2>&1 &;;
esac

dayfile="${XDG_CACHE_HOME:-$HOME/.cache}/dwm-date"
[ -s "$dayfile" ] || echo 0 > "$dayfile"
day=$(cat "$dayfile")
nday=$(date '+%d')
if [ "$day" -ne "$nday" ]; then
	# refresh sb-date
    pkill -RTMIN+12 dwmblocks
    echo "$nday" > "$dayfile"
fi

clock=$(date '+%I')
case "$clock" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac
date "+$icon: %H:%M"
